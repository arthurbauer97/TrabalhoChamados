<div class="form-horizontal">
    <form action="Edit" method="Post">


  
        <div class="form-group">
            <label for="cliente.id">Cliente</label>

            <input class="form-control" type="text" name="cliente.id" value="@Model.cliente.nomecliente " readonly>
            <input hidden type="text" name="id" id="id" value="@Model.id"/>
        </div>

         <div class="row">
            <div class="form-group col-md-6">
                <label for="situacao.id">Situação</label>
                <select class="form-control" name="situacao.id">
                    @foreach(var situacao in @ViewBag.situacoes)
                    {
                        <!option value=@situacao.id selected="@(situacao.id == @Model.situacao.id)">@situacao.tiposituacao</!option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <label for="data">Data</label>
            <input  class="form-control"
                    type="text" 
                    name="data"
                    value="@Model.data.ToString("dd/MM/yyyy")" readonly>
        </div>
        

          <div class="form-group">
            <label>Descrição do Problema</label>
            <input  class="form-control"
                    type="text" 
                    name="descricao"
                    value="@Model.descricao"/>
        </div>

          <div class="form-group">
            <label>Data Solução</label>
            <input  class="form-control"
                    type="text" 
                    name="datasolucao"
                    value="@Model.datasolucao.ToString("dd/MM/yyyy")"/>
        </div>

          <div class="form-group">
            <label>Hora Inicio</label>
            <input  class="form-control"
                    type="time" 
                    name="horainicio"
                    value="@Model.horainicio" readonly/>
        </div>

          <div class="form-group">
            <label>Hora Final</label>
            <input  class="form-control"
                    type="time" 
                    name="horafinal"
                    value="@Model.horafinal"/>
        </div>

        <input  class="btn btn-primary" 
                type="submit" value="Salvar"/>

    </form>
</div>