<div class="form-horizontal">
    <form action="Edit" method="Post">


        <div class="form-group">
            <label>Id</label>
            <input hidden class="form-control"
                    type="text"
                    name="id"
                    value="@Model.id" />
        </div>
      <div class="form-group">
            <label>Nome Solicitante</label>
            <input  class="form-control"
                    type="text"
                    name="nomesolicitante"
                    value="@Model.nomesolicitante" />
        </div>

        <div class="form-group">
            <label>Data</label>
            <input  class="form-control"
                    type="date" 
                    name="data"
                    value="@Model.data"/>
        </div>
        

          <div class="form-group">
            <label>Descrição do Problema</label>
            <input  class="form-control"
                    type="text" 
                    name="descricao"
                    value="@Model.descricao"/>
        </div>

          <div class="form-group">
            <label>Data Solução</label>
            <input  class="form-control"
                    type="date" 
                    name="datasolucao"
                    value="@Model.datasolucao"/>
        </div>

          <div class="form-group">
            <label>Hora Inicio</label>
            <input  class="form-control"
                    type="time" 
                    name="horainicio"
                    value="@Model.horainicio" readonly/>
        </div>

          <div class="form-group">
            <label>Hora Final</label>
            <input  class="form-control"
                    type="time" 
                    name="horafinal"
                    value="@Model.horafinal"/>
        </div>

        <input  class="btn btn-primary" 
                type="submit" value="Salvar"/>

    </form>
</div>